<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Medico.MedicoMainFragment">

    <TextView
        android:id="@+id/textViewGerenciarMedico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medico"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonListarMedico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            app:backgroundTint="#FF427F9F"
            android:text="@string/app_Lis" />

        <Button
            android:id="@+id/buttonAdicionarMedico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            app:backgroundTint="#FF427F9F"
            android:text="@string/app_Nov" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameMedico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>



</LinearLayout>